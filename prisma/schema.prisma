generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  clerkId         String   @unique
  credentialsPath Json?
  tokenPath       String?
  username        String?
  content         String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
